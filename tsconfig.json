{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },

    /* Linting */
    "types": ["cypress", "@testing-library/cypress", "vitest"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "eslint/.eslintrc.mjs",
    "cypress.config.ts",
    "vite.config.ts",
    ".prettierrc.mjs",
    "postcss.config.js",
    "tailwind.config.ts",
    "src",
    "cypress"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
